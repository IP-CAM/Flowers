<?xml version="1.0" encoding="utf-8"?>
<modification>
	<name>Ajouter instruction fleures footer</name>
	<code>Ajouter instruction fleures footer</code>
	<version>1.0</version>
	<author>Sacha Pignot</author>
	<link>http://wwww.opencart.com</link>
	<!-- Ajout d'un lien vers les instructions des fleures dans le menu de navigation -->
	<file path="catalog/view/theme/default/template/common/menu.twig">
		<operation>
			<search>
				<![CDATA[<li><a href="{{ category.href }}">{{ category.name }}</a></li>]]>
			</search>
			<add position="after" offset="2">
				<![CDATA[<li><a href="index.php?route=information/instructions">{{ text_instructions }}</a></li>]]>
			</add>
		</operation>
	</file>
	<file path="catalog/controller/common/menu.php">
		<operation>
			<search>
				<![CDATA[$this->load->language('common/menu');]]>
			</search>
			<add position="after" offset="1">
				<![CDATA[$this->load->language('information/instructions');]]>
			</add>
		</operation>
	</file>

	<!-- Ajout d'un lien vers les instructions des fleures dans la 3Ã¨me colonne du footer -->
	<file path="catalog/view/theme/default/template/common/footer.twig">
		<operation>
			<search>
				<![CDATA[<li><a href="{{ special }}">{{ text_special }}</a></li>]]>
			</search>
			<add position="after" offset="">
				<![CDATA[<li><a href="index.php?route=information/instructions">{{ text_instructions }}</a></li>]]>
			</add>
		</operation>
	</file>
	<file path="catalog/controller/common/footer.php">
		<operation>
			<search>
				<![CDATA[$this->load->language('common/footer');]]>
			</search>
			<add position="after" offset="1">
				<![CDATA[$this->load->language('information/instructions');]]>
			</add>
		</operation>
	</file>
</modification>